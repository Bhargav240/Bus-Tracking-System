<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Student.BusPassActivity">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Your other UI elements -->
                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:gravity="center"
                    android:text="Student Bus Pass"
                    android:fontFamily="@font/ubuntu_medium"
                    android:textColor="@color/maroon_500"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="0dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:id="@+id/busspasscard"
                    app:cardElevation="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_margin="20dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="25dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="200dp"
                            android:layout_gravity="center"
                            android:layout_height="100dp"
                            android:src="@drawable/klhlogo" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/maroon_500"
                            android:textStyle="bold"
                            android:layout_marginBottom="20dp"
                            android:fontFamily="@font/ubuntu_medium"
                            android:textAlignment="center"
                            android:text="Transport Deparment" />



                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:fontFamily="@font/ubuntu_medium"
                            android:textColor="@color/maroon_500"
                            android:textSize="20sp"
                            android:text="Name: " />
                        <TextView
                            android:id="@+id/stuname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginTop="2dp"
                            android:textColor="#051B93"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:textSize="20sp"
                            android:hint="Loading..." />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="20dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textVie6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Roll Number: "
                                android:textColor="@color/maroon_500"
                                android:textSize="20sp"
                                android:fontFamily="@font/ubuntu_medium" />

                            <TextView
                                android:id="@+id/stunroll"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:hint="Loading..."
                                android:textColor="#051B93"
                                android:textSize="20sp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView67"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/ubuntu_medium"
                                android:textColor="@color/maroon_500"
                                android:textSize="20sp"
                                android:text="Bus Route No:" />
                            <TextView
                                android:id="@+id/stubusnum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="#051B93"
                                android:textSize="20sp"
                                android:hint="Loading..." />
                        </LinearLayout>


                        <TextView
                            android:id="@+id/textView677"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:fontFamily="@font/ubuntu_medium"
                            android:textColor="@color/maroon_500"
                            android:textSize="20sp"
                            android:text="Stop Name: " />
                        <TextView
                            android:id="@+id/stustop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:textColor="#051B93"
                            android:layout_marginTop="2dp"
                            android:textSize="20sp"
                            android:hint="Loading..." />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"

                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textVi6477"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/ubuntu_medium"
                                android:textColor="@color/maroon_500"
                                android:textSize="20sp"
                                android:text="Pass Status: " />
                            <TextView
                                android:id="@+id/status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="#051B93"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:hint="Loading..."/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="30dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView6477"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/ubuntu_medium"
                                android:textColor="@color/maroon_500"
                                android:textSize="20sp"
                                android:text="Phone Number: " />
                            <TextView
                                android:id="@+id/stuph"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="#051B93"
                                android:textSize="20sp"
                                android:hint="Loading..." />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </ScrollView>

        <!-- Include ProgressBar directly inside SwipeRefreshLayout -->
        <ProgressBar
            android:id="@+id/progressBarB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:indeterminate="true"
            android:indeterminateTint="#FF9800" />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>
